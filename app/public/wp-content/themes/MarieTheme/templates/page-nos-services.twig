{% extends 'base.twig' %} {% block content %}
<main>
  {# Affichage des champs ACF #}
  <section class="w-full bg-lightBg">
    <div
      class="mx-auto py-20 max-w-screen-2xl flex lg:flex-row items-stretch justify-between gap-0">
      <div
        class="lg:w-[50%] min-h-full text-primary flex flex-col justify-center space-y-4">
        <span class="font-oswald uppercase text-secondary text-3xl">{{
          acf.sous_titre_section
        }}</span>

        <h1 class="font-poppins font-light text-primary text-4xl">
          {{ acf.titre_section }}
        </h1>
      </div>
      <div class="lg:w-[50%] min-h-full">
        <div class="font-poppins font-light text-md text-base">
          {{ acf.description_section }}
        </div>
      </div>
    </div>
  </section>
  <section class="mt-12 p-8">
    <div
      style="gap: 20px"
      class="mx-auto max-w-screen-2xl flex flex-col lg:flex-row items-center justify-between gap-[20px] mt-8">
      {% for post in services %}
      <article class="border rounded-lg overflow-hidden shadow-lg">
        <a href="{{ post.link }}">
          <img src="{{ post.thumbnail.src("full") }}" alt="{{ post.title }}
          loading="lazy"" class="w-full h-64 object-cover" />
          <div class="p-6">
            <h3
              style="font-size: 20px"
              class="font-light font-poppins text-primary text-center">
              {{ post.title }}
            </h3>
          </div>
        </a>
      </article>
      {% endfor %}
    </div>
  </section>
</main>
{% endblock %}
